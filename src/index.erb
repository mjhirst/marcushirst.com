<% ordinalise = -> (day) {
  case day
  when day == 1 then 'st'
  when day == 2 then 'nd'
  when day == 3 then 'rd'
  else 'th'
  end
} %>

<ul>
  <li class="flex gap-2 items-center">

    <svg xmlns="http://www.w3.org/2000/svg" height="24" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
    </svg>
    <a class="link" href="/blog">Blog</a>
  </li>
  <li class="flex gap-2 items-center">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
    </svg>
    <a class="link" href="/about">About</a>
  </li>
  <li class="flex gap-2 items-center">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
    </svg>
    <a class="link" href="/yellow">Yellow Pages</a>
  </li>
</ul>

<hr class="py-6"/>

<div class="grid md:grid-cols-3 gap-x-4 gap-y-6">
  <% collections.posts.resources.each do |post| %>
    <a href="<%= post.relative_url %>" class="">
      <div class="card bg-base-100 shadow-sm overflow-hidden">
        <figure>
          <img
            src="<%= relative_url "images/#{ post.data.headshot }" %>"
            alt="Shoes" />
        </figure>
        <div class="card-body !bg-white">
          <h2 class="card-title"><%= post.data.title %></h2>
          <p><%= post.data.date.strftime("%a %-d#{ordinalise.call(post.data.date.day).sub(/\w+/, '<sup>\0</sup>')} %B %Y").html_safe %></p>
          <div class="card-actions justify-end">
            <% [post.data.categories, post.data.tags].flatten.each do |tag| %>
              <div class="badge badge-primary"><%= tag.upcase %></div>
            <% end %>
          </div>
        </div>
      </div>
    </a>
  <% end %>
</div>